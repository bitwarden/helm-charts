{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>bitwarden/renovate-config:pin-actions",
    ":prConcurrentLimit10",
    ":rebaseStalePrs",
    "schedule:weekends"
  ],
  "enabledManagers": [
    "github-actions",
    "helm-requirements",
    "helm-values",
    "helmv3",
    "custom.regex",
    "docker"
  ],
  "packageRules": [
    {
      "groupName": "gh minor",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
