{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>bitwarden/renovate-config:pin-actions",
    ":prConcurrentLimit10",
    ":rebaseStalePrs",
    "schedule:weekends"
  ],
  "enabledManagers": [
    "github-actions",
    "helm-requirements",
    "helm-values",
    "helmv3",
    "custom.regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^charts/self-host/values\\.yaml$"],
      "matchStrings": [
        "image:\\s*\\n\\s*name:\\s*(?<depName>docker\\.io/nginx|bitnami/kubectl)\\s*\\n\\s*tag:\\s*(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "groupName": "gh minor",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch"]
    }
  ]
}
