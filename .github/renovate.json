{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>bitwarden/renovate-config:pin-actions",
    ":prConcurrentLimit10",
    ":rebaseStalePrs",
    "schedule:weekends"
  ],
  "enabledManagers": [
    "github-actions",
    "helm-requirements",
    "helm-values",
    "helmv3",
    "dockerfile",
    "regex"
  ],
  "packageRules": [
    {
      "groupName": "gh minor",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/_lint_chart\\.yml$"],
      "matchStrings": [
        "HELM_SCHEMA_VERSION: (?<currentValue>.*?)\\s"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "dadav/helm-schema"
    }
  ]
}
